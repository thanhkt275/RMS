{
  "name": "server",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "build": "tsdown",
    "build:dev": "bun run typecheck && bun run build",
    "typecheck": "tsc -b",
    "check-types": "tsc -b",
    "compile": "bun build --compile --minify --sourcemap --bytecode ./src/index.ts --outfile server",
    "dev": "bun run --hot src/index.ts",
    "start": "bun run dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest --watch"
  },
  "dependencies": {
    "hono": "^4.8.2",
    "better-auth": "catalog:",
    "dotenv": "catalog:",
    "zod": "catalog:",
    "@rms-modern/auth": "workspace:*",
    "@rms-modern/prisma": "workspace:*"
  },
  "devDependencies": {
    "@prisma/client": "^7.0.0",
    "@types/bun": "^1.2.6",
    "tsdown": "catalog:",
    "typescript": "catalog:",
    "vitest": "^4.0.9"
  }
}
