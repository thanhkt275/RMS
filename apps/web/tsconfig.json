{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "strict": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "verbatimModuleSyntax": true,
    "skipLibCheck": true,
    "types": ["vite/client"],
    "rootDirs": ["."],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@rms-modern/auth": ["../../packages/auth"]
    },
    "strictNullChecks": true,
    "lib": ["ESNext", "DOM"]
  },
  "references": [
    {
      "path": "../../packages/auth"
    }
  ]
}
