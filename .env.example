# Docker Compose Environment Variables
# Copy this file to .env and customize for your environment

# ============================================================================
# Container Versions
# ============================================================================
BUN_VERSION=1.3
ALPINE_VERSION=3.20

# ============================================================================
# Build Metadata (auto-populated in CI/CD)
# ============================================================================
BUILD_DATE=2025-11-17T00:00:00Z
GIT_COMMIT=unknown

# ============================================================================
# Port Mappings
# ============================================================================
SERVER_PORT=3000
WEB_PORT=3001

# ============================================================================
# Runtime Environments
# ============================================================================
SERVER_NODE_ENV=production
WEB_NODE_ENV=production

# ============================================================================
# API Configuration
# ============================================================================
# For web container to connect to server
# Use service name for inter-container communication
VITE_API_URL=http://server:3000

# For external access (browser)
# VITE_API_URL=http://localhost:3000

# For production
# VITE_API_URL=https://api.yourdomain.com

# ============================================================================
# Environment File Paths (for Docker build)
# ============================================================================
SERVER_ENV_FILE=apps/server/.env
WEB_ENV_FILE=apps/web/.env
